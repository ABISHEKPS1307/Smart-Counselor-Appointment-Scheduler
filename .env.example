# Server Configuration
NODE_ENV=development
PORT=8080

# Database Configuration (Azure SQL / SQL Server)
SQL_SERVER=your-server.database.windows.net
SQL_DATABASE=CounselorScheduler
SQL_USER=sqladmin
SQL_PASSWORD=YourStrongPassword123!
SQL_ENCRYPT=true
SQL_TRUST_SERVER_CERTIFICATE=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2023-05-15

# Azure Key Vault (optional for local dev, required for production)
# AZURE_KEY_VAULT_NAME=your-keyvault-name
# When using Managed Identity in Azure App Service, these will be fetched from Key Vault

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key
APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-app-insights-key;IngestionEndpoint=...

# AI Cache & Rate Limiting
AI_CACHE_TTL_MINUTES=5
AI_RATE_LIMIT_MAX_REQUESTS=20
AI_RATE_LIMIT_WINDOW_MINUTES=15
